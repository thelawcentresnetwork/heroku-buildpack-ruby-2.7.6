#!/usr/bin/env bash
set -x   # turn on shell tracing so you see every command

echo "üëÄ  DEBUG: running bin/detect from $(pwd)"
echo "üëÄ  DEBUG: buildpack root contents:"
ls -R .  

echo "üëÄ  DEBUG: bin directory contents:"
ls -l bin

echo "üëÄ  DEBUG: Gemfile present? ->"
if [ -f Gemfile ]; then echo "YES"; else echo "NO"; fi

# now do your normal detection (or force it to true if you want)
if [ -f Gemfile ]; then
  echo "‚úÖ Ruby buildpack detected"
  exit 0
else
  echo "‚ùå No Gemfile, skipping"
  exit 1
fi