#!/usr/bin/env bash
set -e

BUILD_DIR="$1"
CACHE_DIR="$2"
ENV_DIR="$3"

RUBY_VERSION="2.7.6"
INSTALL_DIR="$BUILD_DIR/.heroku/ruby"

echo "ðŸ‘‰ Cleaning up any old Ruby build"
rm -rf "$BUILD_DIR"/ruby-"$RUBY_VERSION"

echo "ðŸ‘‰ Downloading Ruby $RUBY_VERSION"
curl -L "https://cache.ruby-lang.org/pub/ruby/2.7/ruby-$RUBY_VERSION.tar.gz" | tar xz
cd "ruby-$RUBY_VERSION"

echo "ðŸ‘‰ Configuring Ruby (with OpenSSL, readline & zlib)"
./configure \
  --prefix="$INSTALL_DIR" \
  --with-openssl-dir=/usr \
  --with-readline-dir=/usr \
  --with-zlib-dir=/usr

echo "ðŸ‘‰ Building Ruby"
make -j$(nproc)

echo "ðŸ‘‰ Installing Ruby"
make install

echo "ðŸ‘‰ Setting up PATH for later buildpacks"
mkdir -p "$BUILD_DIR"/.profile.d
cat <<'EOF' > "$BUILD_DIR"/.profile.d/ruby.sh
export PATH="$HOME/.heroku/ruby/bin:$PATH"
EOF

echo "âœ… Ruby $RUBY_VERSION installed"